<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
   
    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" >
        
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            
    <ImageView
        android:id="@+id/background_image"
        android:layout_width="wrap_content"
        android:layout_height="280dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:scaleType="fitXY"
        android:src="@drawable/profile_background1" />
    
     <ImageButton
        android:id="@+id/personalimage"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_alignBottom="@+id/background_image"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:onClick="onPersonalImageClick"
        android:layout_marginLeft="35dp"
        android:background="@null"
        android:scaleType="fitXY"
        android:layout_marginTop="160dp" />
    
    <TextView
        android:id="@+id/textView1"
        android:layout_width="120dp"
        android:gravity="center"
        android:textColor="#FFFFFF"
        android:layout_height="wrap_content"
        android:layout_below="@+id/personalimage"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="25dp"
        android:background="#56bbe7"
        android:text="User Name"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="20sp" />
    
    <TextView
        android:id="@+id/textView2"
        android:layout_width="120dp"
        android:gravity="center"
        android:textColor="#FFFFFF"
        android:background="#90f030"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/textView1"
        android:layout_below="@+id/textView1"
        android:layout_marginTop="10dp"
        android:text="First Name"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="20sp" />
    
    <TextView
        android:id="@+id/textView3"
        android:layout_width="120dp"
        android:gravity="center"
        android:textColor="#FFFFFF"
        android:background="#56bbe7"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/textView1"
        android:layout_below="@+id/textView2"
        android:layout_marginTop="10dp"
        android:text="Last name"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="20sp" />
    
    <TextView
        android:id="@+id/textView4"
        android:layout_width="120dp"
        android:gravity="center"
        android:textColor="#FFFFFF"
        android:background="#90f030"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/textView1"
        android:layout_below="@+id/textView3"
        android:layout_marginTop="10dp"
        android:text="Nick name"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="20sp" />
    
    <TextView
        android:id="@+id/textView5"
        android:layout_width="120dp"
        android:gravity="center"
        android:textColor="#FFFFFF"
        android:background="#56bbe7"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/textView1"
        android:layout_below="@+id/textView4"
        android:layout_marginTop="10dp"
        android:text="Hobby"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="20sp" />
    
    <TextView
        android:id="@+id/textView6"
        android:layout_width="120dp"
        android:gravity="center"
        android:textColor="#FFFFFF"
        android:background="#90f030"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/textView1"
        android:layout_below="@+id/textView5"
        android:layout_marginTop="10dp"
        android:text="Dream Job"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="20sp" />
    
    <TextView
        android:id="@+id/textView7"
        android:layout_width="120dp"
        android:gravity="center"
        android:textColor="#FFFFFF"
        android:background="#b38cd8"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/textView1"
        android:layout_below="@+id/textView6"
        android:layout_marginTop="10dp"
        android:text="Level"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="20sp" />
    
     <TextView
        android:id="@+id/textView8"
        android:layout_width="120dp"
        android:gravity="center"
        android:textColor="#FFFFFF"
        android:background="#b38cd8"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/textView1"
        android:layout_below="@+id/textView7"
        android:layout_marginTop="10dp"
        android:text="ShoutBucks"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="20sp" />
     
     <TextView
         android:id="@+id/textView11"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignTop="@id/textView1"
         android:layout_below="@+id/personalimage"
         android:layout_marginLeft="25dp"
         android:layout_toRightOf="@id/textView1"
         android:paddingLeft="2dp"
         android:paddingRight="2dp"
         android:textAppearance="?android:attr/textAppearanceLarge"
         android:textSize="20sp" />
     
      <TextView
          android:id="@+id/textView22"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignLeft="@id/textView11"
          android:layout_alignTop="@id/textView2"
          android:layout_below="@id/textView1"
          android:layout_toRightOf="@id/textView2"
          android:textAppearance="?android:attr/textAppearanceLarge"
          android:textSize="20sp" />
      
      <TextView
          android:id="@+id/textView33"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignLeft="@id/textView11"
          android:layout_alignTop="@id/textView3"
          android:layout_below="@id/textView2"
          android:layout_toRightOf="@id/textView3"
          android:textAppearance="?android:attr/textAppearanceLarge"
          android:textSize="20sp" />
      
      <TextView
          android:id="@+id/textView44"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignLeft="@id/textView11"
          android:layout_alignTop="@id/textView4"
          android:layout_below="@id/textView3"
          android:layout_toRightOf="@id/textView4"
          android:textAppearance="?android:attr/textAppearanceLarge"
          android:textSize="20sp" />
      
       <TextView
           android:id="@+id/textView55"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_alignLeft="@id/textView11"
           android:layout_alignTop="@id/textView5"
           android:layout_below="@id/textView4"
           android:layout_toRightOf="@id/textView5"
           android:textAppearance="?android:attr/textAppearanceLarge"
           android:textSize="20sp" />
       
       <TextView
           android:id="@+id/textView66"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_alignLeft="@id/textView11"
           android:layout_alignTop="@id/textView6"
           android:layout_below="@id/textView5"
           android:layout_toRightOf="@id/textView6"
           android:textAppearance="?android:attr/textAppearanceLarge"
           android:textSize="20sp" />
       
       <TextView
           android:id="@+id/textView77"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_alignLeft="@id/textView11"
           android:layout_alignTop="@id/textView7"
           android:layout_below="@id/textView6"
           android:layout_toRightOf="@id/textView7"
           android:textAppearance="?android:attr/textAppearanceLarge"
           android:textSize="20sp" />

       <ImageView
           android:id="@+id/level0"
           android:layout_width="20dp"
           android:layout_height="wrap_content"
           android:layout_alignBottom="@+id/textView7"
           android:layout_alignTop="@id/textView7"
           android:layout_marginLeft="30dp"
           android:layout_toRightOf="@id/textView77"
            />
       
        <ImageView
           android:id="@+id/level1"
           android:layout_width="20dp"
           android:layout_height="wrap_content"
           android:layout_alignBottom="@+id/textView7"
           android:layout_alignTop="@id/textView7"
           android:layout_marginLeft="10dp"
           android:layout_toRightOf="@+id/level0"
            />
        
         <ImageView
           android:id="@+id/level2"
           android:layout_width="20dp"
           android:layout_height="wrap_content"
           android:layout_alignBottom="@+id/textView7"
           android:layout_alignTop="@id/textView7"
           android:layout_marginLeft="10dp"
           android:layout_toRightOf="@+id/level1"
          />
       
        <TextView
            android:id="@+id/textView88"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/textView11"
            android:layout_alignTop="@id/textView8"
            android:layout_below="@id/textView7"
            android:layout_toRightOf="@id/textView8"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="20sp" />
    
    <Button
        android:id="@+id/returnbutton"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/textView88"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/btn_style_green"
        android:onClick="onRnturnClick"
        
        android:textColor="#ffffff"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="65dp"
        android:text="My Profile"
        android:textColor = "#FFFFFF"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="40sp" />
    
    </RelativeLayout>

    </ScrollView>

    

</LinearLayout>

