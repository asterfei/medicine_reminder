<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Select Avatar"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="30sp" />

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:text="Level 0"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="20sp" />
            
            <TextView
                android:id="@+id/textView21"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/textView2"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="20sp" />

            <ImageButton
                android:id="@+id/imageButton01"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginTop="25dp"
                android:layout_toLeftOf="@+id/ImageButton02"
                android:maxHeight="200dp"
                android:maxWidth="200dp"
                android:onClick="onAvatarImage1ButtonClick"
                android:scaleType="fitCenter"
                android:src="@drawable/spider1" />

            <TextView
                android:id="@+id/textView01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/imageButton01"
                android:layout_below="@+id/imageButton01"
                android:layout_marginTop="2dp"
                android:textSize="15sp" />

            <ImageButton
                android:id="@+id/ImageButton02"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_alignTop="@+id/imageButton01"
                android:layout_centerHorizontal="true"
                android:maxHeight="200dp"
                android:maxWidth="200dp"
                android:onClick="onAvatarImage2ButtonClick"
                android:scaleType="fitCenter"
                android:src="@drawable/iron2" />
            
            <TextView
                android:id="@+id/textView02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/ImageButton02"
                android:layout_below="@+id/ImageButton02"
                android:layout_marginTop="2dp"
                android:textSize="15sp" />

            <ImageButton
                android:id="@+id/ImageButton03"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_alignTop="@+id/ImageButton02"
                android:layout_toRightOf="@+id/ImageButton02"
                android:maxHeight="200dp"
                android:maxWidth="200dp"
                android:onClick="onAvatarImage3ButtonClick"
                android:scaleType="fitCenter"
                android:src="@drawable/superman3" />
            
            <TextView
                android:id="@+id/textView03"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/ImageButton06"
                android:layout_alignTop="@+id/textView02"
                android:textSize="15sp" />

            <ImageButton
                android:id="@+id/ImageButton04"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_alignLeft="@+id/imageButton01"
                android:layout_below="@+id/imageButton01"
                android:layout_marginTop="25dp"
                android:maxHeight="200dp"
                android:maxWidth="200dp"
                android:onClick="onAvatarImage4ButtonClick"
                android:scaleType="fitCenter"
                android:src="@drawable/batman4" />
            
            <TextView
                android:id="@+id/textView04"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/textView3"
                android:layout_below="@+id/ImageButton04"
                android:textSize="15sp" />
            

            <ImageButton
                android:id="@+id/ImageButton05"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_alignTop="@+id/ImageButton04"
                android:layout_toRightOf="@+id/ImageButton04"
                android:maxHeight="200dp"
                android:maxWidth="200dp"
                android:onClick="onAvatarImage5ButtonClick"
                android:scaleType="fitCenter"
                android:src="@drawable/cat6" />
            
            <TextView
                android:id="@+id/textView05"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/ImageButton05"
                android:layout_below="@+id/ImageButton05"
                android:textSize="15sp" />

            <ImageButton
                android:id="@+id/ImageButton06"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_alignTop="@+id/ImageButton05"
                android:layout_toRightOf="@+id/ImageButton05"
                android:maxHeight="200dp"
                android:maxWidth="200dp"
                android:onClick="onAvatarImage6ButtonClick"
                android:scaleType="fitCenter"
                android:src="@drawable/captain5" />
            
            <TextView
                android:id="@+id/textView06"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/ImageButton06"
                android:layout_below="@+id/ImageButton06"
                android:textSize="15sp" />

            <ImageButton
                android:id="@+id/ImageButton07"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_alignLeft="@+id/ImageButton04"
                android:layout_below="@+id/ImageButton04"
                android:layout_marginTop="25dp"
                android:maxHeight="200dp"
                android:maxWidth="200dp"
                android:onClick="onAvatarImage7ButtonClick"
                android:scaleType="fitCenter"
                android:src="@drawable/greenman7" />
            
            <TextView
                android:id="@+id/textView07"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/textView3"
                android:layout_below="@+id/ImageButton07"
                android:textSize="15sp" />

            <ImageButton
                android:id="@+id/ImageButton08"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_alignTop="@+id/ImageButton07"
                android:layout_toRightOf="@+id/ImageButton07"
                android:maxHeight="200dp"
                android:maxWidth="200dp"
                android:onClick="onAvatarImage8ButtonClick"
                android:scaleType="fitCenter"
                android:src="@drawable/thor8" />
            
            <TextView
                android:id="@+id/textView08"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/ImageButton08"
                android:layout_below="@+id/ImageButton08"
                android:textSize="15sp" />

            <ImageButton
                android:id="@+id/ImageButton09"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_alignTop="@+id/ImageButton08"
                android:layout_toRightOf="@+id/ImageButton08"
                android:maxHeight="200dp"
                android:maxWidth="200dp"
                android:onClick="onAvatarImage9ButtonClick"
                android:scaleType="fitCenter"
                android:src="@drawable/loki9" />
            
            <TextView
                android:id="@+id/textView09"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/ImageButton09"
                android:layout_below="@+id/ImageButton09"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/textView2"
                android:layout_below="@+id/ImageButton07"
                android:layout_marginTop="25dp"
                android:text="Level 1"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="20sp" />
            
            <TextView
                android:id="@+id/textView31"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/textView3"
                 android:layout_below="@+id/ImageButton07"
                 android:layout_alignTop="@+id/textView3"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="20sp" />

            <ImageButton
                android:id="@+id/ImageButton010"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_alignLeft="@+id/ImageButton07"
                android:layout_below="@+id/textView3"
                android:layout_marginTop="2dp"
                android:maxHeight="200dp"
                android:maxWidth="200dp"
                android:onClick="onAvatarImage10ButtonClick"
                android:scaleType="fitCenter"
                android:src="@drawable/ali_1" />
            
            <TextView
		        android:id="@+id/textView010"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_alignLeft="@+id/ImageButton010"
                android:layout_below="@+id/ImageButton010"
		        android:layout_marginTop="2dp"
		        android:textSize="15sp" />
            
            <Button
		        android:id="@+id/Button01"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_marginTop="25dp"
		        android:layout_below="@+id/ImageButton010"
		        android:background="#669DdE80"
		        android:onClick="onAvatarContinueButtonClick"
		        android:text="Continue"
		        android:textColor="#90000000"
		        android:textSize="30sp"
		        android:width="500dp" />

            
            
        </RelativeLayout>
    </ScrollView>

    

</LinearLayout>