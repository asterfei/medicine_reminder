<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:text="My Avatar Store"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="30sp" />

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:text="Current Avatar"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="20sp" />

            <ImageButton
                android:id="@+id/ImageButton1"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_alignTop="@id/textView2"
                android:layout_marginLeft="40dp"
                android:layout_toRightOf="@id/textView2"
                android:maxHeight="200dp"
                android:maxWidth="90dp"
                android:onClick="onAvatarCurrentImageButtonClick"
                android:scaleType="fitCenter" />
            
            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ImageButton1"
                android:layout_marginTop="0dp"
                android:text="Purchased Avatars"
                android:layout_alignLeft="@+id/textView2"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="20sp" />

            <ImageButton
                android:id="@+id/ImageButton01"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_below="@+id/textView3"
                android:layout_marginTop="5dp"
                android:layout_toLeftOf="@+id/ImageButton02"
                android:maxHeight="200dp"
                android:maxWidth="200dp"
                android:onClick="onAvatarImage1ButtonClick"
                android:scaleType="fitCenter" />

            <ImageButton
                android:id="@+id/ImageButton02"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_alignTop="@+id/ImageButton01"
                android:layout_centerHorizontal="true"
                android:maxHeight="200dp"
                android:maxWidth="200dp"
                android:onClick="onAvatarImage2ButtonClick"
                android:scaleType="fitCenter" />

            <ImageButton
                android:id="@+id/ImageButton03"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_alignRight="@id/ImageButton03"
                android:layout_alignTop="@+id/ImageButton02"
                android:layout_toRightOf="@+id/ImageButton02"
                android:maxHeight="200dp"
                android:maxWidth="200dp"
