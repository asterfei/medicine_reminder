                android:layout_height="40dp"
                android:layout_alignBaseline="@+id/Button02"
                android:layout_alignParentBottom="true"
                android:layout_alignRight="@id/ImageButton03"
                android:layout_below="@+id/ImageButton25"
                android:layout_marginTop="30dp"
                android:background="@drawable/btn_style_green"
                android:onClick="onAvatarContinueButtonClick"
                android:text="Submit"
                android:textColor="#ffffff"
                android:textSize="18sp" />

            <Button
                android:id="@+id/Button02"
                android:layout_width="90dp"
                android:layout_height="40dp"
                android:layout_alignLeft="@id/ImageButton01"
                android:layout_alignParentBottom="true"
                android:layout_below="@+id/ImageButton25"
                android:layout_marginBottom="22dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/btn_style_white"
                android:onClick="onAvatarBackButtonClick"
                android:text="Return"
                android:textColor="#ffffff"
                android:textSize="18sp" />
