<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#f5f5f5"
    android:layout_margin="4dp"
    android:layout_height="match_parent" >

    <EditText
        android:id="@+id/nameText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/nickName"
        android:layout_margin="3dp"
        android:textColor = "#000000"
        android:textSize = "20sp" >
    </EditText>

    <TextView
        android:id="@+id/title"
        android:layout_width="fill_parent"
        android:gravity="center_horizontal"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="#5090EE90"
        android:text="Avatar Profile"
        android:textColor="#696969"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/nickName"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/nameText"
        android:layout_below="@+id/title"
        android:layout_marginTop="24dp"
        android:text="Nick Name:"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/hobby"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/nameText"
        android:layout_marginTop="26dp"
        android:text="Hobbies:"
        android:textSize="20sp" />
    
    <EditText 
        android:id = "@+id/hobbytext"
        android:layout_width = "match_parent"
        android:layout_height = "wrap_content"
        android:layout_below = "@id/hobby"
        android:textColor ="#000000"
        android:layout_margin="10dp"
        android:textSize = "20sp"
        />

    <TextView
        android:id="@+id/dreamJob"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/hobbytext"
        android:layout_marginTop="14dp"
        android:text="Dream Job"
        android:textSize="20sp" />
    
    <EditText 
        android:id = "@+id/jobtext"
        android:layout_width = "match_parent"
        android:layout_height = "wrap_content"
        android:layout_below = "@id/dreamJob"
        android:textSize = "20sp"
        android:textColor = "#000000"/>

    <Button
        android:id="@+id/finish"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:background="#5090EE90"
        android:text="Finish"
        android:onClick = "onFinishClick"
        android:textColor="#696969"
        android:textSize="20sp" 
        android:focusable="true"
        />

</RelativeLayout>
